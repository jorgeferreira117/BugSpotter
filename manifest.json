{
  "manifest_version": 3,
  "name": "BugSpotter",
  "version": "1.0.0",
  "description": "Extens√£o para identificar, registrar e analisar bugs diretamente no browser",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "debugger",
    "desktopCapture",
    "tabCapture",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com;"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "BugSpotter",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}